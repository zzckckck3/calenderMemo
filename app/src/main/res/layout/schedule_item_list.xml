<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <TextView
        android:id="@+id/startTime_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="10:30"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/finish_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="1:30"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startTime_text"/>
    <View
        android:id="@+id/color_view"
        android:layout_width="7dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_item_schedule"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/startTime_text"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/color_view"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/location_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="장소"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/color_view"
        app:layout_constraintTop_toBottomOf="@id/title_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>